<div class="text-center" style="justify-content: center">
  <h2>Change your password</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :put}) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="field">
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em><br/>
      <% end %>
      <label for="password">Новый пароль</label>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", style: "width: 30%", class: "form-control" %>
    </div>

    <div class="field">
      <label for="password_confirmation">Подтвердите новый пароль</label>
      <%= f.password_field :password_confirmation, autocomplete: "off", style: "width: 30%", class: "form-control" %>
    </div>

    <div class="actions">
      <%= f.submit "Change my password", class: "btn btn-primary", data: { turbolinks: false } %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
