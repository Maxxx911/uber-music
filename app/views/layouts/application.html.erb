<!DOCTYPE html>
<html>
  <head>
    <title>UberMusic</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= javascript_pack_tag('application') %>
    <link rel="stylesheet" type="text/css" charset="UTF-8" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.6.0/slick.min.css" />
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.6.0/slick-theme.min.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" />
    <%= stylesheet_link_tag    'main_application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if user_signed_in? %>
      <%= react_component("shared/navigation/navigation", {image: current_user.image, id: current_user.id}) %>
    <% else %>
      <%= react_component("shared/navigation/navigation", {image: current_user.image}) %>
    <% end %>
      <%= react_component("shared/parallax", {filter: true, small: true, image: "/assets/main.jpg" }) %>
    <%= yield %>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
  </body>
</html>
