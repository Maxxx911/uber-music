<!DOCTYPE html>
<html>
  <head>
    <title>UberMusic</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" type="text/css" charset="UTF-8" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.6.0/slick.min.css" />
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.6.0/slick-theme.min.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" />
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" />
  </head>

  <body>
    <% if user_signed_in? %>
      <%= react_component("shared/navigation/navigation", {image: 'https://i.pinimg.com/originals/bf/72/07/bf72075d9a7cc668f0ebefe370ee0c6f.jpg', id: current_user.id}) %>
    <% else %>
      <%= react_component("shared/navigation/navigation", {image: 'https://i.pinimg.com/originals/bf/72/07/bf72075d9a7cc668f0ebefe370ee0c6f.jpg'}) %>
    <% end %>
    <%= yield %>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
  </body>
</html>
